{
  "name": "microfront",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "spell-check": "cspell \"src/**\"",
    "prettier:fix": "prettier --write ./src",
    "eslint:fix": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" --fix",
    "static:fix": "npm run spell-check && npm run prettier:fix && npm run eslint:fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config-overrides-path": "./config-overrides.js"
}
